# Environment Variables for FlowAI Backend
# Copy this to .env and fill in your values

# --- Database ---
DATABASE_URL=postgresql://user:password@localhost:5432/flowai
REDIS_URL=redis://localhost:6379

# --- Stripe ---
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_PRO=price_xxxxxxxxxxxxx
STRIPE_PRICE_STUDIO=price_xxxxxxxxxxxxx
STRIPE_PRICE_BUSINESS=price_xxxxxxxxxxxxx

# --- Supabase (Auth) ---
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# --- JWT ---
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # 24 hours in seconds

# --- AWS S3 (Video Storage) ---
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_S3_BUCKET=flowai-videos
AWS_REGION=us-east-1

# --- AI Models ---
HUGGING_FACE_TOKEN=hf_xxxxxxxxxxxxx
MODEL_CACHE_DIR=/models/cache

# --- App Config ---
ENVIRONMENT=development  # development, staging, production
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# --- Monitoring ---
SENTRY_DSN=https://xxxxxxxxxxxxx@o1234567.ingest.sentry.io/1234567
DATADOG_API_KEY=xxxxxxxxxxxxx

# --- Email (SendGrid) ---
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
FROM_EMAIL=noreply@flowai.com
